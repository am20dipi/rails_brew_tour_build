<h1>Signup</h1>
<%= flash[:message] if flash[:message] %><br><br>

<div class="content">
    <%= form_for(@user) do |f| %>
      
        <%= f.label :name %>
        <%= f.text_field :name %><br><br>

        <%= f.label :email %>
        <%= f.email_field :email %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br><br>


        <%= f.submit "Submit", class: "form-button" %>

    <% end %>
</div>
