<h1>Log in</h1>

<div class="content">
    <%= form_for(:user) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br><br>
        <!-- we use :password instead of :password_digest to avoid storing the string -->

        <%= f.submit "Login", class: "form-button" %>
    <% end %>

    <br><%= button_to "Log in with Google", '/auth/google_oauth2', class: "form-button"  %>
</div>


