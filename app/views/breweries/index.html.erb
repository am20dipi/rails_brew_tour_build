<h1>Breweries</h1>


<div class="wrapper">
    <% if @breweries.count > 0 %>
        <% @breweries.each do |b| %>
            <ul>
                <li><p><%= link_to b.name, brewery_path(b) %></p></li>
            </ul>
        <% end %>
    <% else %>
        <p>Sorry, you do not have any breweries yet.</p>
        <p>Add a brewery by clicking the button above!</p>
    <% end %>
</div>

<%= render partial: "beers/go_back" %>